            <TextBox x:Name="O_PhoneBox3" Grid.Column="1" Height="26" Margin="331,476,487,266" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Width="98" KeyDown="NumericCheck" MaxLength="4"/>
