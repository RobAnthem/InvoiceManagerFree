            <TextBox x:Name="C_FAXBox3" Grid.Column="1" Height="26" Margin="331,270,487,472" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" Width="98" KeyDown="NumericCheck" MaxLength="4"/>

